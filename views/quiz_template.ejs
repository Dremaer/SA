<%- include ('partials/nav'); -%>

    <div id="second-nav">
      <div class="container">
          <div class="template-dropdown">
              <div class="temp-btn" onclick="dropList(event)">
                  <button class="dropdown-title">Templates</button>
                  <i class="bi bi-arrow-down-short"></i>
              </div>
              <ul class="list-tip">
                  <li class="list-item"><img src="/images/quiz.png" alt="Quizzes"> Quizzes</li>
                  <li class="list-item"><img src="/images/flashcard.png" alt="Flashcards"> Flashcards</li>
                  <li class="list-item"><img src="/images/midterm.png" alt="Midterm"> Mid-term exam</li>
                  <li class="list-item"><img src="/images/final.png" alt="Final"> Final exam</li>
              </ul>
          </div>
          <div class="search-bar input-group mb-3">
              <input type="text" class="form-control" placeholder="Enter topic which you want to prepare" aria-label="Enter topic which you want to prepare">
